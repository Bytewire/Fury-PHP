RewriteEngine On

#RewriteRule ^assets/(.*)$ /sites/bytewire-streetcrime/vhosts/shop.street-crime.com/http/application/assets/$1 [L,NC]
RewriteCond %{REQUEST_URI} ^/assets
RewriteRule ^(.*)$ /application/$1 [NC]

# This will fix up wikimedia images fed via index.php
RewriteCond %{REQUEST_URI} gangster-game-wiki/index.php
RewriteRule ^(.*)$ http://10.50.0.46/$1 [P,L]

RewriteCond %{REQUEST_URI} !\.(gif|jpe?g|png|css|js|ico|swf)$
RewriteRule ^(.*)$ http://10.50.0.46/$1 [P,L]

# http://httpd.apache.org/docs/2.0/mod/mod_expires.html
ExpiresActive On
<FilesMatch "\.(ico|jpg|jpeg|png|gif|js|css|swf)$">
ExpiresDefault A2592000
</FilesMatch>

#Compress js and css
AddOutputFilterByType DEFLATE text/html text/plain text/xml <IfModule mod_deflate.c> <FilesMatch ".(js|css)$"> SetOutputFilter DEFLATE </FilesMatch> <FilesMatch ".(ttf|otf|eot|svg)$" > SetOutputFilter DEFLATE </Files
